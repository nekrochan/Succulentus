<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onboardingFragment">


    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.succulentus.OnboardingFragment"
        android:label="OnboardingFragment"
        tools:layout="@layout/fragment_onboarding">

        <!-- переход от Onboarding к Login
        без добавления в back stack (по аналогии с addToBackStack = false) -->
        <action
            android:id="@+id/action_onboardingFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.succulentus.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login" >

        <argument
            android:name="prefilledUsername"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="prefilledPassword"
            app:argType="string"
            android:defaultValue="" />

        <!-- переход от Login к SignUp
        добавляет в back stack (по умолчанию) - как в лр3 -->
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />

        <!-- переход от Login к Home
        очищает весь стек (аналог clearBackStack). -->

        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

        <!-- аргумент user, который может быть передан из SignUpFragment -->
        <argument
            android:name="user"
            app:argType="java.io.Serializable" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.succulentus.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up" >

        <!-- аереход от SignUp обратно к Login
        используется при успешной регистрации -->
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="false">

            <!-- Добавьте аргумент user -->
            <argument
                android:name="user"
                app:argType="com.example.succulentus.User" />
        </action>

    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.succulentus.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" >

        <argument
            android:name="username"
            app:argType="string"
            android:defaultValue="Гость" />
    </fragment>
</navigation>